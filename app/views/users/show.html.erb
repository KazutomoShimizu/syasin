<div style="border-radius: 1px; border: 4px dotted #ffb6c1; font-size: 100%; padding: 20px;">
  <h1><%= @user.name %>のページ</h1>
</div>

<% if @user.image? %>
  <%= image_tag @user.image.url %>
<% else %>
  <%= image_tag ("noimage.png") %>
<% end %>

<p>メールアドレス: <%= @user.email %></p>

<%= link_to "編集", edit_user_path(@user) %>
