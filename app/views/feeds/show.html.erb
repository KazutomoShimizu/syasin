<p id="notice"><%= notice %></p>

<% unless @feed.user_id == current_user.id %>
  <% if @bookmark.present? %>
    <%= link_to 'お気に入り解除する', bookmark_path(id: @bookmark.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', bookmarks_path(feed_id: @feed.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<p>
  <strong>Image:</strong>
  <%= image_tag @feed.image.url if @feed.image.present?%>
</p>

<p>
  <strong>コメント</strong>
  <%= @feed.body %>
</p>

<%= link_to 'Edit', edit_feed_path(@feed) %> |
<%= link_to 'Back', feeds_path %>
